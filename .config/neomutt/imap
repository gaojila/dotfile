# 信箱类型
set mbox_type="Maildir"
# 信箱目录
set folder="$HOME/Maildir"
# 默认使用的信箱
set spoolfile="$HOME/Maildir/inbox"
# 用于创建新文件夹时使用
set mbox="$HOME/Maildir/seen"  #Seen box
# 设置回复邮箱
set record="$HOME/Maildir/sent"  #Sent box
# 设置编辑邮件的临时目录
set tmpdir="$HOME/Maildir/draft"
# 保存草稿的位置
set postponed="$HOME/Maildir/postponed"
